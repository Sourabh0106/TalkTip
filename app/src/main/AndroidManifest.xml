<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.kratos.talktip"
    tools:ignore="ExtraText">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_chatappicon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_chatappicon"
        android:supportsRtl="true"
        android:theme="@style/Theme.TalkTip"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".Activities.SettingActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.GroupChatActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.ChatActivity"
            android:exported="false"
            android:theme="@style/Theme.TalkTip.NoActionBar" />
        <activity
            android:name=".Activities.SetupProfileActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.OTPActivity"
            android:exported="true"
            android:windowSoftInputMode="stateVisible" />
        <activity
            android:name=".Activities.PhoneNumberActivity"
            android:exported="true"
            android:windowSoftInputMode="stateVisible">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.MainActivity"
            android:exported="true"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <!--
 Set custom default icon. This is used when no icon is set for incoming notification messages.
     See README(https://goo.gl/l4GJaQ) for more.
        -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_send_svgrepo_com" />
        <!--
 Set color used with incoming notification messages. This is used when no color is set for the incoming
             notification message. See README(https://goo.gl/6BKBk7) for more.
        -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/green" />
    </application>
    <uses-permission android:name="android.permission.CALL_PHONE"/>
</manifest>